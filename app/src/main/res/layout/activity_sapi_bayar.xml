<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.motionlab.qurqah.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#7BB5AB">

        <TextView
            android:id="@+id/keluar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="220dp"
            android:paddingTop="10dp"
            android:text="Keluar"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sapi_bayar_keluar"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/keluar"
            android:background="@drawable/ic_logout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="200dp"
            android:layout_weight="1"
            android:background="#868686"
            android:text="Sapi"
            android:textColor="#000" />

        <Button
            android:id="@+id/sapi_bayar_profile"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_user" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pembayaran"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="200dp"
                android:padding="5dp"
                android:src="@drawable/ic_bca"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mandiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="200dp"
                android:src="@drawable/ic_mandiri" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <Button
                android:id="@+id/click_bayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:background="@color/chijau"
                android:layout_marginRight="40dp"
                android:text="Bayar"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
